// mast have img
img
	max-width 100%  // or width 100% но max-width лучше, так как не растянется больше чем свой оригинальный размер
	height auto


.load-more
	position relative
	font-family 'GTM-Medium'
	color colorBlackGray
	line-height rem(28rem)
	border none
	background-color transparent
	cursor pointer


.svg-sprites
	width rem(40rem)
	fill #fff

.btn
	position relative
	border none
	outline none
	margin 0px
	padding 10px 10px
	text-transform uppercase
	width 150px
	max-width 150px
	min-height 75px
	max-height 75px
	overflow hidden
	// text-overflow ellipsis
	overflow-wrap break-word
	word-wrap break-word
	font-family 'GTM-Medium', Arial, Verdana, sans-serif
	background-color colorRed
	color white
	cursor pointer



// placeholder text
// Добавить в снипет, это глобальные стили для цвет Плейсхолдеров


input:-ms-input-placeholder  //for IE  (Глобально (:-ms-input-placeholder) не работает, нужно указывать цель)
	color white
	font-size 16px


::-ms-input-placeholder  // for Edge
	color white
	font-size 16px


::-moz-placeholder
	color white
	font-size 16px
	opacity 1  // иначе присутствует прозрачность

::-webkit-input-placeholder
	color white
	font-size 16px









// svg
svg
	width 25px
	height 25px

.s1
	margin-top 150px

.s11
	width 170px
	outline 1px dashed red

.svg-star
	fill none
	stroke-width 30px
	stroke orange
	margin-right -3px

.svg-star--on
	fill orange

.svg-star--off
	fill none

.svg-star--small
	width 16px
	height 16px


.svg-star--big
	width 22px
	height 22px




// [svg style]

// global style

.svg-button
	position absolute
	pointer-events none
	size(rem(13rem), rem(13rem))  // base size


.svg-wr
	display flex
	background-color transparent
	border-radius 50%


.svg
	margin auto


.svg-stroke
	stroke-width 15px
	stroke currentColor


@keyframes arrow-down
	0%
		transform translateY(0px)
		color colorGreen

	50%
		transform translateY(20px)

	60%
		opacity 0

	100%
		fill colorGreen
		opacity 0


@keyframes bord
	28%
		box-shadow 2px 2px 0px 0px colorGreen, 8px 7px 0px 0px #f3f1f2, 10px 9px 0px 0px red, -2px -2px 0px 0px black, -8px -7px 0px 0px #f3f1f2, -10px -9px 0px 0px red
		border-bottom-color transparent

	70%
		box-shadow 2px 2px 0px 0px colorGreen, 8px 7px 0px 0px #f3f1f2, 10px 9px 0px 0px red, -2px -2px 0px 0px black, -8px -7px 0px 0px #f3f1f2, -10px -9px 0px 0px red
		border-bottom-color transparent

	100%
		box-shadow 2px 2px 0px 0px colorGreen, 8px 7px 0px 0px #f3f1f2, 10px 9px 0px 0px red, -2px -2px 0px 0px black, -8px -7px 0px 0px #f3f1f2, -10px -9px 0px 0px red
		border-bottom-color transparent


@keyframes amaz
	0%
		box-shadow 4px 5px 0px -2px colorGreen, -4px -5px 0px -3px black
		border-bottom-color transparent

	50%
		transform translateY(20px)

	60%
		opacity 0

	100%
		fill colorGreen
		opacity 0
