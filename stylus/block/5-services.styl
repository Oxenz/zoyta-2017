.services
	width 100%
	display flex
	flex-flow wrap column
	align-items center
	margin-bottom 60px

	&__caption-wrapper
		width 400px
		margin-bottom 50px
		text-align center

	&__caption
		margin-bottom 5px
		font-size rem(22rem)
		font-weight 400
		color colorBlackGray

	&__title
		margin-top 0px
		font-family 'GTM-Book', Arrial, Calibri, 'Trebuchet MS', sans-serif
		font-size rem(16rem)
		color colorLightGray

	&__tag
		width rem(815rem)
		margin-bottom 50px
		display flex
		justify-content space-around


	// Специальный комментарий, не ломающий вертску чере &__ он должен начинатся не с первой колонки, а со 2-ой


	&__bid-wrapper
		width 815px
		margin-bottom 50px
		display flex
		justify-content space-around


	&__bid-first
	&__bid-second
		display flex
		flex-basis 360px
		padding-bottom 20px


	&__bid-icon
		margin-top 60px
		margin-right 30px


	&__bid-caption
		color colorGreen
		font-weight 400


	&__bid-description
		margin-bottom 0px
		padding-right 20px
		font-family 'GTM-Book', Arrial, Calibri, 'Trebuchet MS', sans-serif
		color colorLightGray


.svg-wr--services
	position relative
	box-sizing border-box
	size(rem(100rem),rem(100rem))
	border 3px solid colorLightGray
	color colorLightGray
	fill currentColor
	transition all 2s

	svg
		transition all .5s

	&:not(:last-of-type)::before
		content ''
		position absolute
		top 47px
		left 103px
		height 2px
		width 50px
		background-color colorLightBorder

	&:not(:last-of-type)::after
		content ''
		position absolute
		top 47px
		left 103px
		height 2px
		width 1px
		background-color colorLightBorder
		transition background-color 1s, width .5s


	&:nth-of-type(1):hover
		border 3px solid colorGreen
		transition border .64s

		&::after
			width 50px
			background-color colorGreen
			transition width .6s

		svg
			fill colorGreen
			stroke colorGreen


	&:nth-of-type(2):hover
		border 3px solid colorBlue
		transition border .64s

		&::after
			width 50px
			background-color colorBlue
			transition width .6s

		svg
			fill colorBlue
			stroke colorBlue


	&:nth-of-type(3):hover
		border 3px solid colorCyan
		transition border .64s

		&::after
			width 50px
			background-color colorCyan
			transition width .6s

		svg
			fill colorCyan
			stroke colorCyan


	&:nth-of-type(4):hover
		border 3px solid colorOrange
		transition border .64s

		&::after
			width 50px
			background-color colorOrange
			transition width .6s

		svg
			fill colorOrange
			stroke colorOrange


	&:nth-of-type(5):hover
		border 3px solid colorPurple
		transition border .64s

		svg
			fill colorPurple
			stroke colorPurple


