.services
	width 100%
	display flex
	flex-flow wrap column
	align-items center
	margin-bottom 60px


	&__caption-wrapper
		width 400px
		margin-bottom 50px
		text-align center


	&__caption
		margin-bottom 5px
		font-size rem(22rem)
		font-weight 400
		color colorBlackGray


	&__title
		margin-top 0px
		font-family 'GTM-Book', Arrial, Calibri, 'Trebuchet MS', sans-serif
		font-size rem(16rem)
		color colorLightGray


	&__tag
		width rem(815rem)
		margin-bottom 50px
		display flex
		justify-content space-around


	// Специальный комментарий, не ломающий вертску чере &__ он должен начинатся не с первой колонки, а со 2-ой


	&__bid-wrapper
		width 815px
		margin-bottom 50px
		display flex
		justify-content space-around


	&__bid-first
	&__bid-second
		display flex
		flex-basis 360px
		padding-bottom 20px


	&__bid-icon
		margin-top 60px
		margin-right 30px


	&__bid-caption
		color colorGreen
		font-weight 400


	&__bid-description
		margin-bottom 0px
		padding-right 20px
		font-family 'GTM-Book', Arrial, Calibri, 'Trebuchet MS', sans-serif
		color colorLightGray


.svg-wr--services
	position relative
	box-sizing border-box
	size(rem(100rem),rem(100rem))
	border 3px solid colorLightGray
	color colorLightGray
	fill currentColor
	transition all 2s

	svg
		transition all .5s

	&:not(:last-of-type)::before
		content ''
		position absolute
		top 47px
		left 103px
		height 2px
		width 50px
		background-color colorLightBorder

	&:not(:last-of-type)::after
		content ''
		position absolute
		top 47px
		left 103px
		height 2px
		width 1px
		background-color colorLightBorder
		transition background-color 1s, width .5s


	&:nth-of-type(1):hover
		border 3px solid colorGreen
		transition border .64s

		&::after
			width 50px
			background-color colorGreen
			transition width .6s

		svg
			fill colorGreen
			stroke colorGreen


	&:nth-of-type(2):hover
		border 3px solid colorBlue
		transition border .64s

		&::after
			width 50px
			background-color colorBlue
			transition width .6s

		svg
			fill colorBlue
			stroke colorBlue


	&:nth-of-type(3):hover
		border 3px solid colorCyan
		transition border .64s

		&::after
			width 50px
			background-color colorCyan
			transition width .6s

		svg
			fill colorCyan
			stroke colorCyan


	&:nth-of-type(4):hover
		border 3px solid colorOrange
		transition border .64s

		&::after
			width 50px
			background-color colorOrange
			transition width .6s

		svg
			fill colorOrange
			stroke colorOrange


	&:nth-of-type(5):hover
		border 3px solid colorPurple
		transition border .64s

		svg
			fill colorPurple
			stroke colorPurple


.svg-wr--services .svg--house
	size(rem(50rem),rem(50rem))

.svg-wr--services .svg--personal
	size(rem(50rem),rem(50rem))

.svg-wr--services .svg--education
	size(rem(50rem),rem(50rem))

.svg-wr--services .svg--music
	size(rem(50rem),rem(50rem))

.svg-wr--services .svg--train
	size(rem(50rem),rem(50rem))


.svg-wr--services-bid
	size(rem(60rem),rem(60rem))
	background-color colorGreen
	color white
	fill currentColor


.svg-wr--services-bid .svg--lightning
.svg-wr--services-bid .svg--leaf
		size(rem(30rem),rem(30rem))



// Desktop-First
// От большого к меньшему
// Используем @media (max-width)


@media (max-width: 830px)
	.services__tag
		width 75%
		min-width 540px

	.svg-wr--services:not(:last-of-type)::before
	.svg-wr--services:not(:last-of-type)::after
		display none

	.services__bid-wrapper
		width 80%


@media (max-width: 790px)
	.services__bid-icon
		display none


	.services__bid-description
		padding-right 25px


@media (max-width: 665px)
	.services__bid-wrapper
		flex-direction column


	.services__bid-first
	.services__bid-second
		flex-basis auto


@media (max-width: 580px)
	.services__tag
		min-width 80%


	.svg-wr--services
		size(rem(75rem),rem(75rem))


		.svg--house
			size(rem(40rem),rem(40rem))

		.svg--personal
			size(rem(40rem),rem(40rem))

		.svg--education
			size(rem(40rem),rem(40rem))

		.svg--music
			size(rem(40rem),rem(40rem))

		.svg--train
			size(rem(40rem),rem(40rem))



@media (max-width: 440px)
	.services__caption-wrapper
		width 100%


	.svg-wr--services
		size(rem(50rem),rem(50rem))


		.svg--house
			size(rem(30rem),rem(30rem))

		.svg--personal
			size(rem(30rem),rem(30rem))

		.svg--education
			size(rem(30rem),rem(30rem))

		.svg--music
			size(rem(30rem),rem(30rem))

		.svg--train
			size(rem(30rem),rem(30rem))


// mobile от 0px до 360px
@media (max-width 360px)
	.services__caption-wrapper
		max-width 360px
		margin-bottom 25px


	.services__caption
		font-size 20px
		padding 0 15px


	.services__title
		font-size 12px


	.services__tag
		flex-wrap wrap
		min-width 310px
		justify-content center


	.svg-wr--services
		margin-left 10px


	.services__bid:nth-child(2n+2) .services__bid-caption
		text-align right


	.services__bid:nth-child(2n+2) .services__bid-description
		padding-right 0px
		text-align right


// mobile от 0px до 320px
@media (max-width: 330px)
	.services__caption
		font-size 18px
		padding 0px


	.services__title
		font-size 11px
