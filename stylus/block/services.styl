.services
	width 100%
	display flex
	flex-flow wrap column
	align-items center
	margin-bottom 120px

	&__caption-wrapper
		width 400px
		margin-bottom 100px
		text-align center
		outline 1px solid red

	&__caption
		margin-bottom 5px
		font-size rem(22rem)
		font-weight 400
		color colorBlackGray

	&__title
		margin-top 0px
		font-family 'GTM-Book'
		font-size rem(16rem)
		color colorLightGray

	&__tag
		width rem(815rem)
		margin-bottom 100px
		display flex
		justify-content space-around
		// outline 1px solid blue
		// outline-offset -1px

		.services__circle-wrapper
			position relative
			width 100px
			height 100px
			padding 22px 0px
			box-sizing border-box
			border-radius 50%
			text-align center
			background-color transparent
			border 3px solid colorLightGray
			transition all 2s

			svg
				transition all .5s

			&:not(:last-of-type)::before
				content ''
				position absolute
				top 47px
				left 103px
				height 2px
				width 50px
				background-color colorLightBorder



		.services__circle-wrapper--house:hover
			border 3px solid colorGreen
			transition all 1s

			svg
				fill colorGreen
				stroke colorGreen
				transition all .5s


		.services__circle-wrapper--personal:hover
			border 3px solid colorBlue
			transition all .5s

			svg
				fill colorBlue
				stroke colorBlue
				transition all .5s


		.services__circle-wrapper--education:hover
			border 3px solid colorCayen
			transition all .5s

			svg
				fill colorCayen
				stroke colorCayen
				transition all .5s


		.services__circle-wrapper--music:hover
			border 3px solid colorOrange
			transition all .5s

			svg
				fill colorOrange
				stroke colorOrange
				transition all .5s


		.services__circle-wrapper--train:hover
			border 3px solid colorPurple
			transition all .5s

			svg
				fill colorPurple
				stroke colorPurple
				transition all .5s



	.svg-sprites__tag
		fill colorLightGray
		stroke colorLightGray
		size(rem(50rem),rem(50rem))

	.svg-sprites__tag--education
		size(rem(56rem),rem(56rem))


	&__bid-wrapper
		width 815px
		// height 200px
		margin-bottom 100px
		display flex
		justify-content space-around
		// outline 1px solid red
		// outline-offset -1px

	&__bid-first
	&__bid-second
		display flex
		background-color rgba(111,111,111, 0.1)
		flex-basis 360px
		padding-bottom 20px

	&__bid-icon
		margin-top 60px
		margin-right 30px

		.services__circle-wrapper
			display flex
			size(rem(60rem),rem(60rem))
			background-color colorGreen
			border-radius 50%

	&__bid-svg
		size(rem(30rem),rem(30rem))
		margin auto

	// &__bid-text

	&__bid-caption
		color colorGreen
		font-weight 400
	&__bid-description
		font-family 'GTM-Book'
		color colorLightGray
