.offer
	width rem(948rem)
	margin 0 auto
	padding-bottom 50px
	display flex
	flex-wrap wrap
	justify-content space-between
	box-shadow 0px 1px 0px 0px colorLightBorder
	margin-bottom 100px
	// outline 1px solid red

.offer__service
	position relative
	width rem(210rem)
	height rem(275rem)
	margin-bottom 30px
	background-color white
	border-bottom 1px solid colorLightBorder


.offer__service-extended
	position relative
	margin-bottom 30px
	background-color white
	border-bottom 1px solid colorLightBorder

.offer__img-wrapper
	width 100%
	height 140px

.offer__service-extended
	position relative
	width rem(455rem)

	.offer__img-wrapper
		height 120px


.offer__service--house .offer__img-wrapper
	box-shadow 0 3px 0px 0px colorGreen

.offer__service--music .offer__img-wrapper
	box-shadow 0 3px 0px 0px colorOrange

.offer__service--train .offer__img-wrapper
	box-shadow 0 3px 0px 0px colorPurple


.offer__price
	display inline-block
	position absolute
	top 8px
	right 8px
	min-width 65px
	box-sizing border-box
	border-radius 35px
	background-color black
	color white
	font-size rem(12rem)
	text-align center



.offer__service--house .offer__price
.offer__service--house .offer__circle-wrapper
	background-color colorGreen

.offer__service--music .offer__price
.offer__service--music .offer__circle-wrapper
	background-color colorOrange

.offer__service--train .offer__price
.offer__service--train .offer__circle-wrapper
	background-color colorPurple


.offer__service--house .offer__type
	color colorGreen
.offer__service--music .offer__type
	color colorOrange
.offer__service--train .offer__type
	color colorPurple


.offer__circle-wrapper
	position absolute
	top 110px
	left 84px
	width 60px
	height 60px
	padding 12px 0px
	box-sizing border-box
	background-color colorLightGray
	border-radius 50%
	text-align center
	border 3px solid white

.offer__service-extended .offer__circle-wrapper
	top 90px
	left 20px


.offer__caption
	margin 0px
	padding 30px 14px 10px
	height 50px
	color colorBlackGray
	font-size inherit
	font-weight inherit
	text-align center

	overflow hidden
	text-overflow ellipsis


.offer__type
	text-transform uppercase
	margin 0px 25px
	text-align center
	font-size rem(12rem)
	line-height rem(14rem)


.offer__raiting
	display flex
	justify-content center
	align-items center


.offer__raiting-value
	color colorLightGray
	font-size rem(12rem)
	padding-left 5px


.offer__type-extended
	display inline-block
	position relative
	bottom 25px
	left 90px
	margin 0px
	text-transform uppercase
	color white
	font-size rem(18rem)
	font-weight 400
	text-shadow 1px 1px 1px black


.offer__raiting--small
	display inline-flex
	position relative
	bottom 23px
	left 90px

.offer__raiting--small .offer__raiting-value
	line-height 20px
	color white
	text-shadow 1px 1px 1px black

.offer__comments
	display flex
	height 109px
	margin-top 20px


.offer__raiting--big
	display flex
	position absolute
	top -31px
	left -3.5px


.offer__comments-left
	position relative
	margin 0px 20px

	&::before
		content ''
		position absolute
		top -17px
		left 29px
		width 2px
		height 16px
		background-color #f3f1f2

.offer__portret-wrapper
	width 61px
	height 61px


.offer__comments-right
	position relative


.offer__author
	font-family 'GTM-Bold'
	font-size rem(16rem)
	text-transform uppercase
	color colorBlackGray

.offer__comment
	max-height rem(80rem)
	overflow hidden
	font-family 'GTM-Book'
	color colorLightGray
	line-height rem(20rem)


	p
		margin 0px
		padding-right 20px
		max-height 60px
		overflow hidden

.offer__link-more
	font-family 'GTM-Bold'
	color colorBlackGray
	text-decoration none
	padding-left 2px

.offer__load-more
	font-size rem(18rem)
	margin-left calc(50% - 66px)

	&::before
		content ''
		position absolute
		bottom -1px
		left 3px
		right 21%
		background-color #cccdd3
		height 1px
		transition all .15s

	&:hover::before
		height 30px
		transition all .5s
		z-index -1
		background-color black

		// Second style animate
		// background-color colorLightGray

	&:hover
		color colorLightGray

		// Second style animate
		// color black


