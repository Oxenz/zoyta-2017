.offer
	width rem(948rem)
	margin 0 auto
	padding-bottom 50px
	display flex
	flex-wrap wrap
	justify-content space-between
	box-shadow 0px 1px 0px 0px colorLightBorder
	margin-bottom 70px


	&__box
		position relative
		width rem(210rem)
		height rem(275rem)
		margin-bottom 30px
		background-color white
		border-bottom 1px solid colorLightBorder
		transition box-shadow 0.125s


	&__box-extended
		width rem(455rem)
		position relative
		margin-bottom 30px
		background-color white
		border-bottom 1px solid colorLightBorder
		transition box-shadow 0.225s

		.offer__img-wrapper
			height 120px


	&__img-wrapper
		width 100%
		height 140px


	&__price
		display inline-block
		position absolute
		top 8px
		right 8px
		min-width 65px
		box-sizing border-box
		border-radius 35px
		background-color black
		color white
		font-size rem(12rem)
		text-align center


	&__box-extended.offer__box--house:hover
		animation bord-green 1s .1s forwards
		border-bottom-color transparent

	&__box-extended.offer__box--personal:hover
		animation bord-blue 1s .1s forwards
		border-bottom-color transparent

	&__box-extended.offer__box--education:hover
		animation bord-cyan 1s .1s forwards
		border-bottom-color transparent

	&__box-extended.offer__box--music:hover
		animation bord-orange 1s .1s forwards
		border-bottom-color transparent

	&__box-extended.offer__box--train:hover
		animation bord-purple 1s .1s forwards
		border-bottom-color transparent


	&__box.offer__box--house:hover
		border-bottom-color transparent
		animation bord-green 1s .1s forwards

	&__box.offer__box--personal:hover
		animation bord-blue 1s .1s forwards
		border-bottom-color transparent

	&__box.offer__box--education:hover
		animation bord-cyan 1s .1s forwards
		border-bottom-color transparent

	&__box.offer__box--music:hover
		animation bord-orange 1s .1s forwards
		border-bottom-color transparent

	&__box.offer__box--train:hover
		animation bord-purple 1s .1s forwards
		border-bottom-color transparent


	&__box--house .offer__price
	&__box--house .svg-wr--offer
		background-color colorGreen

	&__box--music .offer__price
	&__box--music .svg-wr--offer
		background-color colorOrange

	&__box--train .offer__price
	&__box--train .svg-wr--offer
		background-color colorPurple

	&__box--personal .offer__price
	&__box--personal .svg-wr--offer
		background-color colorBlue

	&__box--education .offer__price
	&__box--education .svg-wr--offer
		background-color colorCyan


	&__box--house .offer__img-wrapper
		box-shadow 0 3px 0px 0px colorGreen

	&__box--music .offer__img-wrapper
		box-shadow 0 3px 0px 0px colorOrange

	&__box--train .offer__img-wrapper
		box-shadow 0 3px 0px 0px colorPurple

	&__box--personal .offer__img-wrapper
		box-shadow 0 3px 0px 0px colorBlue

	&__box--education .offer__img-wrapper
		box-shadow 0 3px 0px 0px colorCyan


	&__box--house .offer__type
		color colorGreen

	&__box--music .offer__type
		color colorOrange

	&__box--train .offer__type
		color colorPurple

	&__box--personal
		color colorBlue

	&__box--education
		color colorCyan


	&__caption
		margin 0px
		padding 30px 14px 10px
		height 50px
		color colorBlackGray
		font-size inherit
		font-weight inherit
		text-align center
		overflow hidden


	&__type
		margin 0px 25px
		font-size rem(12rem)
		line-height rem(14rem)
		text-transform uppercase
		text-align center


	&__raiting
		display flex
		justify-content center
		align-items center


	&__raiting-value
		padding-left 5px
		font-size rem(12rem)
		color colorLightGray


	&__type-extended
		display inline-block
		position relative
		bottom 25px
		left 90px
		margin 0px
		text-transform uppercase
		color white
		font-size rem(18rem)
		font-weight 400
		text-shadow 1px 1px 1px black


	&__raiting--small
		display inline-flex
		position relative
		bottom 23px
		left 90px


		.offer__raiting-value
			line-height 20px
			color white
			text-shadow 1px 1px 1px black


	&__comments
		display flex
		height 109px
		margin-top 20px


	&__raiting--big
		display flex
		position absolute
		top -31px
		left -3.5px


	&__comments-left
		position relative
		margin 0px 20px


		&::before
			content ''
			position absolute
			top -17px
			left 29px
			width 2px
			height 16px
			background-color #f3f1f2


	&__portret-wrapper
		width 61px
		height 61px


	&__comments-right
		position relative


	&__author
		font-family 'GTM-Bold'
		font-size rem(16rem)
		text-transform uppercase
		color colorBlackGray

	&__comment
		max-height rem(80rem)
		overflow hidden
		font-family 'GTM-Book'
		line-height rem(20rem)
		color colorLightGray


	p
		max-height 60px
		margin 0px
		padding-right 20px
		overflow hidden


	&__link-more
		font-family 'GTM-Bold'
		color colorBlackGray
		text-decoration none


	&__load-more
		font-size rem(18rem)
		margin-left calc(50% - 66px)


		&::before
			content ''
			position absolute
			bottom -1px
			left 3px
			right 21%
			background-color #cccdd3
			height 1px
			transition all .15s


		&:hover::before
			height 30px
			transition all .5s
			z-index -1
			background-color black

			// Second style animate
			// background-color colorLightGray


		&:hover
			color colorLightGray

			// Second style animate
			// color black


// [SVG]
// style

.svg-wr--offer
	position absolute
	top 110px
	left 84px
	size(60px,60px)
	box-sizing border-box
	color white
	fill currentColor
	background-color colorLightGray
	border 3px solid white


.offer__box-extended .svg-wr--offer
	top 90px
	left 20px


.svg-wr--offer .svg--house
	size(rem(30rem),rem(30rem))
	padding-bottom 3px

.svg-wr--offer .svg--personal
	size(rem(30rem),rem(30rem))

.svg-wr--offer .svg--education
	size(rem(35rem),rem(35rem))

.svg-wr--offer .svg--music
	size(rem(30rem),rem(30rem))

.svg-wr--offer .svg--train
	size(rem(30rem),rem(30rem))
